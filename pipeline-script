def notifyBuild(String buildStatus = 'STARTED') {
  // build status of null means successful
  buildStatus =  buildStatus ?: 'SUCCESS'

  // Default values
  def colorName = 'RED'
  def colorCode = '#FF0000'
  def subject = "${buildStatus}: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]'"
  def summary = "${subject} (${env.BUILD_URL})"

  // Override default values based on build status
  if (buildStatus == 'STARTED') {
    color = 'YELLOW'
    colorCode = '#FFFF00'
  } else if (buildStatus == 'SUCCESS') {
    color = 'GREEN'
    colorCode = '#00FF00'
  } else {
    color = 'RED'
    colorCode = '#FF0000'
  }

  // Send notifications
  slackSend (color: colorCode, message: summary)
}

pipeline {
    //agentany
    agent {
    label 'slave-1'
    }
    parameters{
        parameters {
  choice choices: ['main', 'master', 'dev'], description: 'passing the branch name', name: 'branch name'
  string defaultValue: 'krishna', description: 'passing the person name', name: 'krishna'
}
stages{
    satge('checkoutcode') {
        steps{
            gitbranch:"${params Branchname}"
        }
        }
        stage ('Display person name')
        {
            steps{
                sh "echo The person Name is:${}"
                sh "echo The person Name is:${params personname}"
              }
    }
}
    notifyBuild(currentBuild.result)
}
